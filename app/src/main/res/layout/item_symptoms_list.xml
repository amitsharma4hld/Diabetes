<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_pan_tool_24"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:gravity="start"
        android:layout_gravity="start"
        />
    <CheckBox
        android:id="@+id/cb_symptom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sweating"
        android:textColor="@color/app_main_text_color"
        android:fontFamily="@font/avenir_next_regular"
        android:textColorHint="@color/app_main_text_color"
        android:textSize="18sp"
        android:buttonTint="@color/color_monitorblood_glucose_theme"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:layout_gravity="start|center_vertical"
        tools:targetApi="lollipop" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dip"
        android:layout_height="50dip"
        app:cardCornerRadius="30dp"
        android:id="@+id/mc_describe"
        app:cardBackgroundColor="@color/colorObgyTheme"
        android:layout_gravity="end"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="@string/describe"
            android:textColor="#fff"
            android:textSize="20sp" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
