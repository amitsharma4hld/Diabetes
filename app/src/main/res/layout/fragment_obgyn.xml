<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.HomeScreenFragment"
    android:layout_marginBottom="52dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:background="@color/colorBackground"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_bold"
                android:textSize="24sp"
                android:id="@+id/username_obgy"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="#4F8394"
                android:maxLines="2"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/mc_logout"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dip"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/mc_logout"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                app:strokeColor="#00ae99"
                app:cardForegroundColor="@android:color/transparent"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/logout"
                    android:fontFamily="@font/avenir_next_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:weightSum="4"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/mc_today"
                    app:cardForegroundColor="@android:color/transparent"
                    app:strokeColor="#00ae99"
                    android:layout_margin="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/today"
                        android:fontFamily="@font/avenir_next_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_today"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/today"
                    android:fontFamily="@font/avenir_next_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/mc_week"
                    app:cardForegroundColor="@android:color/transparent"
                    app:strokeColor="#00ae99"
                    android:visibility="gone"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/week"
                        android:fontFamily="@font/avenir_next_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:fontFamily="@font/avenir_next_regular"
                    android:text="@string/week"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/mc_month"
                    app:cardForegroundColor="@android:color/transparent"
                    app:strokeColor="#00ae99"
                    android:visibility="gone"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:fontFamily="@font/avenir_next_regular"
                        android:text="@string/month"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:fontFamily="@font/avenir_next_regular"
                    android:text="@string/month"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/mc_all"
                    app:cardForegroundColor="@android:color/transparent"
                    app:strokeColor="#00ae99"
                    android:visibility="gone"
                    android:layout_margin="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:fontFamily="@font/avenir_next_regular"
                        android:text="@string/all"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/all"
                    android:fontFamily="@font/avenir_next_regular"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="130dip"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="June 4. 2020"
            android:fontFamily="@font/avenir_next_regular"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/dr_details"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="150dip"
                            app:cardCornerRadius="30dp"
                            android:id="@+id/totalnumber"
                            app:cardBackgroundColor="@color/colorAccent"
                            android:layout_margin="2dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="130dip"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="Week"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/avenir_next_regular"
                                    android:textSize="16sp" />
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/avenir_next_bold"
                                    android:text="12"
                                    android:textColor="#fff"
                                    android:textSize="26sp" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="@string/of"
                                    android:fontFamily="@font/avenir_next_regular"
                                    android:textColor="#fff"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="@string/pregnancy"
                                    android:fontFamily="@font/avenir_next_regular"
                                    android:textColor="#fff"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="150dip"
                            app:cardCornerRadius="30dp"
                            android:id="@+id/drname"
                            app:cardBackgroundColor="@color/colorAccent"
                            android:layout_margin="2dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="130dip"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/avenir_next_bold"
                                    android:text="Dr. Brand"
                                    android:textColor="#fff"
                                    android:textSize="24dp" />
                                <TextView
                                    android:layout_width="130dip"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/avenir_next_regular"
                                    android:textStyle="normal"
                                    android:text="appointment"
                                    android:textColor="#fff"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="130dip"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/avenir_next_regular"
                                    android:text="Todat at"
                                    android:textColor="#fff"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="130dip"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:text="12:00 N"
                                    android:fontFamily="@font/avenir_next_bold"
                                    android:textColor="#fff"
                                    android:textSize="24dp" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_steps_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avenir_next_bold"
                    android:text="4,500 steps today"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/dr_details"
                    android:visibility="invisible"
                    />


                <LinearLayout
                    android:id="@+id/diabetes_options"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:layout_below="@+id/tv_steps_count"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/mc_observation"
                        app:cardBackgroundColor="@color/colorObgyTheme"
                        android:layout_margin="2dp">

                        <TextView
                            android:id="@+id/tv_observation_myslef"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_next_regular"
                            android:text="@string/observations_of_myself"
                            android:textColor="#fff"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            />

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/mc_counseling"
                        app:cardBackgroundColor="@color/colorObgyTheme"
                        android:layout_marginTop="16dp"
                        >

                        <TextView
                            android:id="@+id/tv_insulin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_next_regular"
                            android:text="@string/counseling"
                            android:textColor="#fff"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            />

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/mc_prenatal_visit"
                        app:cardBackgroundColor="@color/colorObgyTheme"
                        android:layout_marginTop="16dp"
                        >

                        <TextView
                            android:id="@+id/tv_prenatal_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_next_regular"
                            android:text="@string/prenatal_visit"
                            android:textColor="#fff"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            />

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/mc_progress"
                        app:cardBackgroundColor="@color/colorObgyTheme"
                        android:layout_marginTop="16dp"
                        >

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_next_regular"
                            android:text="@string/progress"
                            android:textColor="#fff"
                            android:textSize="28sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</FrameLayout>
