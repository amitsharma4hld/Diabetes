<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginBottom="52dp"
        android:paddingBottom="32dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/observations_of_myself"
                android:gravity="center"
                android:textSize="32sp"
                android:fontFamily="@font/avenir_next_bold"
                android:id="@+id/username"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorObgyTheme"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/today"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:layout_marginBottom="16dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMonitorBloodGlucose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_observation_list"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:scrollbars="none"
                android:layout_marginBottom="16dp"
                android:outlineAmbientShadowColor="@color/colorObgyTheme"
                android:outlineSpotShadowColor="@color/colorObgyTheme"
                tools:targetApi="p" />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="150dip"
            android:layout_height="50dip"
            android:layout_gravity="center_horizontal|bottom"
            app:cardCornerRadius="30dp"
            android:id="@+id/done"
            app:cardBackgroundColor="@color/colorObgyTheme"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="52dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/done_plus_twenty"
                android:textColor="#fff"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</FrameLayout>