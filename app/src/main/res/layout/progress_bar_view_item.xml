<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/gram"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="30dp"
        android:background="@color/colorWhite"
        app:cardBackgroundColor="#fff">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="7"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="2">

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/five"
                        android:layout_height="wrap_content"
                        android:text="140"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/five"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/four"
                        android:layout_height="wrap_content"
                        android:text="120"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/four"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/three"
                        android:layout_height="wrap_content"
                        android:text="95"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/three"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/two"
                        android:layout_height="wrap_content"
                        android:text="80"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/two"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/one"
                        android:layout_height="wrap_content"
                        android:text="65"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/one"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>



            </LinearLayout>
        </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="9"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"></RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/sunday"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="Su"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/sunday"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/monday"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="M"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/monday"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tues"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="T"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/tues"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/wed"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="W"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/wed"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/THU"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="TH"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/THU"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/Fri"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="F"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/Fri"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/sat"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:text="Sa"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/sat"
                        android:background="@color/color_monitorblood_glucose_theme"
                        android:layout_height="1dp"/>
                </RelativeLayout>


            </LinearLayout>
 >



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>