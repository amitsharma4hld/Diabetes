<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".ui.home.fragment.TrimesterFragment"
    android:layout_marginBottom="54dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/counseling"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorObgyTheme"
        android:fontFamily="@font/avenir_next_bold"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_1st_trimester_topic"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/colorTitleText"
        android:fontFamily="@font/avenir_next_regular"
        />
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_trimester_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="1"
        tools:listitem="@layout/item_trimester"
        android:layout_marginTop="18dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dip"
        android:layout_height="42dip"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="30dp"
        android:id="@+id/done"
        app:cardBackgroundColor="@color/colorObgyTheme"
        android:layout_marginBottom="52dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="@string/done_plus_ten"
            android:textColor="#fff"
            android:textSize="22sp"
            android:fontFamily="@font/avenir_next_regular"
            />
    </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
