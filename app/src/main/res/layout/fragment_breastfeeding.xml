<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.HomeScreenFragment"
    android:layout_marginBottom="52dp"
    android:padding="16dp"
    android:background="@color/colorBackground"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Jamilla"
        android:fontFamily="@font/avenir_next_bold"
        android:textSize="24sp"
        android:id="@+id/username"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textColor="#4F8394"
        android:maxLines="2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/mc_logout"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="06 june 2020"
            android:fontFamily="@font/avenir_next_bold"
            android:textSize="18sp"
            android:id="@+id/tv_date"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="#4F8394"
            android:maxLines="2"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/mc_logout"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Tracking"
            android:fontFamily="@font/avenir_next_bold"
            android:textSize="18sp"
            android:id="@+id/tv_track"
            android:textStyle="normal"
            android:gravity="center"
            android:textColor="#F3CF63"
            android:maxLines="2"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/mc_logout"
            />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/scrollView"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dip"
                android:layout_height="100dip"
                app:cardCornerRadius="60dp"
                android:id="@+id/cv_breastfeeding"
                app:cardBackgroundColor="#F3CF63"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/avenir_next_regular"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/avenir_next_regular"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="16sp" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_breastfeeding"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Breast\nFeeding"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dip"
                android:layout_height="100dip"
                app:cardCornerRadius="60dp"
                android:id="@+id/cv_diperchange"
                app:cardBackgroundColor="#F3CF63"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_diperchange"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Diper\nChange"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dip"
                android:layout_height="100dip"
                app:cardCornerRadius="60dp"
                android:id="@+id/cv_dailyovserve"
                app:cardBackgroundColor="#F3CF63"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/avenir_next_regular"
                        android:textSize="16sp" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_dailyovserve"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Daily\nObservation"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="110dip"
                android:layout_height="100dip"
                app:cardCornerRadius="60dp"
                android:id="@+id/cv_babyweight"
                app:cardBackgroundColor="#F3CF63"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="130dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:fontFamily="@font/avenir_next_regular"
                        android:textSize="16sp" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_babyweight"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Baby/nWeight"/>
        </RelativeLayout>


    </LinearLayout>
    </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:id="@+id/cv_history"
                app:cardBackgroundColor="#F3CF63"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:textColor="@color/colorAccent"
                        android:text="Show my History"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>