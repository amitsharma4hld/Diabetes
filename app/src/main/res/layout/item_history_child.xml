<?xml version="1.0" encoding="utf-8"?>
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="45dp"
                android:layout_height="70dp"
                app:cardCornerRadius="1dp"
                app:cardBackgroundColor="#D8D8D8"
                app:strokeColor="#686767"
                app:strokeWidth="1dp"
                android:layout_gravity="center"
                >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginRight="3dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="3dp"
                   android:layout_height="match_parent">
                   <View
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:background="#F3CF63"
                   android:layout_gravity="bottom"
                       android:id="@+id/breastfeedingprocess"
                   android:layout_height="50dp"/>
                   <View
                       android:layout_width="0dp"
                       android:layout_marginLeft="5dp"
                       android:id="@+id/diperprocess"
                       android:layout_weight="1"
                       android:layout_gravity="bottom"
                       android:background="#F3CF63"
                       android:layout_height="60dp"/>
                   <View
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="5dp"
                       android:layout_gravity="bottom"
                       android:id="@+id/stoolprocess"
                       android:background="#F3CF63"
                       android:layout_height="40dp"/>
               </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="50dip"
                android:layout_height="50dip"
                app:cardCornerRadius="90dp"
                android:id="@+id/cv_start"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="#F3CF63"
                android:visibility="gone"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_start_stop_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:fontFamily="@font/avenir_next_bold"
                        android:text="Today"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>
